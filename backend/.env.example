# Application Settings
PROJECT_NAME=Shangji Question Processing System
VERSION=0.1.0
ENVIRONMENT=development
LOG_LEVEL=INFO

# API Settings
API_V1_STR=/api/v1
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Database
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=shangji_db
POSTGRES_PORT=5432
DATABASE_URI=postgresql+asyncpg://postgres:postgres@localhost:5432/shangji_db

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URI=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security
SECRET_KEY=changeme-secret-key-for-production-use-strong-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080
REFRESH_TOKEN_EXPIRE_MINUTES=43200

# MinIO / S3
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false
MINIO_BUCKET_NAME=shangji-questions

# File Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp

# MinerU OCR Settings
MINERU_API_URL=https://mineru.net
MINERU_API_KEY=
MINERU_MODEL_VERSION=vlm

# LLM Settings
LLM_API_URL=
LLM_API_KEY=
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# Prompt Version
REWRITE_PROMPT_VERSION=3

# Monitoring
SENTRY_DSN=

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
